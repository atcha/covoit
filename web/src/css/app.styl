@import 'themes/common.variables'
// app global css
body
  background $tertiary

h3:first-of-type
  margin-top 0
  @media screen and (max-width: 767px)
    line-height 30px


// Layout
.q-layout-header
  box-shadow 0 2px 2px -1px rgba(0,0,0,0.1), 0 4px 2px rgba(0,0,0,0.07), 0 1px 5px rgba(0,0,0,0.06)
  .q-toolbar-subtitle
    opacity 1
    color $secondary
q-layout-footer
  box-shadow 0 -2px 2px -1px rgba(0,0,0,0.1), 0 -4px 2px rgba(0,0,0,0.07), 0 -1px 5px rgba(0,0,0,0.06)

// home
.home
  background url("../assets/thure-montgolfiere2.jpg") no-repeat;
  background-size cover


// List proposer
.trip-list
  .q-list
    .q-list-header
      font-size 16px
      color #000000
    .q-item-side-left
      align-self flex-start

// map
GmapMap
  width 100%
  height auto

.search-form
  display flex
  justify-content space-between


.ride-list
  background $ligth
